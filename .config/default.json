{
    "source": {
        "layout": "./src/styles/layout.css",
        "plugin_js": ["./src/scripts/ta-*.js"],
        "plugin_css": "./src/styles/ta-pagination.css",
        "plugin_css_anim": "./src/styles/ta-pagination-anim*.css",
        "alpine_js": ["./node_modules/alpinejs/dist/alpine.js"],
        "plugin_alpine_js": ["./node_modules/alpinejs/dist/alpine.js", "./dist/js/ta-pagination.js"]
    },
    "name": {
        "alpine_js": "alpine.js",
        "plugin_js": "ta-pagination.js",
        "plugin_alpine_js": "alpine-ta-pagination.js"
    },
    "purge": {
        "content": ["./public/*.html"]
    },
    "destination": {
        "layout": "./dist/css",
        "plugin_css": "./dist/css",
        "plugin_css_anim": "./dist/css",
        "alpine_js": "./dist/js",
        "plugin_js": "./dist/js",
        "plugin_alpine_js": "./dist/js"
    },
    "distribution": {
        "styles": ["./dist/css/**/*.css"],
        "scripts": ["./dist/js/**/*.js"]
    },
    "public": {
        "styles": "./public/css",
        "scripts": "./public/js"
    },
    "watch": {
        "styles": "./src/styles/*.css",
        "scripts": "./src/scripts/*.js"
    },
    "clean": ["./dist", "./public/css", "./public/js"]
}
